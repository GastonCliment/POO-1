"""
clase Persona {
  - nombre
  - apellido
  + Persona(nombre: str, apellido: str): Persona
 + fullName(): cadena
 + iniciales(): cadena
}
"""


Clase Persona:
    def __init__(self, nombre: str, apellido: str):
        yomismo. _nombre = nombre
        yomismo. _apellido = apellido

    def full_name(self) -> str:
        usuario: str = self. _nombre + yo. _apellido
        devolver usuario

    def iniciales(self) -> str:
        iniciales = yo. _nombre[:2] + "." + self. _apellido[:2]
        devolver iniciales


si __name__ == '__main__':
    usuario = Persona("Gaston", "Climent")
    print(usuario. full_name())
    print(usuario. iniciales())
